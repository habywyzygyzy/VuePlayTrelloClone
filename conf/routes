# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                           controllers.HomeController.index()

GET         /board/show/:id             controllers.BoardController.show(id: Long)
POST        /board/add                  controllers.BoardController.add()
POST        /board/delete               controllers.BoardController.delete()

POST        /bList/add                  controllers.BoardListController.add()
POST        /bList/delete               controllers.BoardListController.delete()

POST        /card/add                   controllers.CardController.add()
POST        /card/delete                controllers.CardController.delete()

# Map static resources from the /public folder to the /assets URL path
GET         /*file                      controllers.Assets.versioned(path="/public", file: Asset)
